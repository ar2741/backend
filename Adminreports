import React, { useState } from "react";

export default function ReportAccess() {
  const [reportAccessList, setReportAccessList] = useState([
    {
      id: 1,
      username: "john.smith",
      createdAt: "2025-08-20",
      report: "KYC Reports",
      access: "View",
    },
    {
      id: 2,
      username: "priya.sharma",
      createdAt: "2025-08-19",
      report: "AML Reports",
      access: "View/Download",
    },
  ]);

  const [newAccess, setNewAccess] = useState({
    username: "",
    report: "",
    access: "View",
  });

  const [editItem, setEditItem] = useState(null);

  // ✅ Assign Access
  const handleAssign = () => {
    if (!newAccess.username || !newAccess.report) return;
    const newEntry = {
      id: Date.now(),
      ...newAccess,
      createdAt: new Date().toISOString().split("T")[0],
    };
    setReportAccessList([...reportAccessList, newEntry]);
    setNewAccess({ username: "", report: "", access: "View" });
  };

  // ✅ Delete Access
  const handleDelete = (id) => {
    setReportAccessList(reportAccessList.filter((item) => item.id !== id));
  };

  // ✅ Save Edited Access
  const handleEditSave = () => {
    setReportAccessList(
      reportAccessList.map((item) =>
        item.id === editItem.id ? editItem : item
      )
    );
    setEditItem(null);
  };

  return (
    <div className="report-access-page">
      {/* Assign Section */}
      <div className="assign-section">
        <h3>Assign Report Access</h3>
        <div className="assign-controls">
          <select
            value={newAccess.username}
            onChange={(e) =>
              setNewAccess({ ...newAccess, username: e.target.value })
            }
          >
            <option value="">Choose a user...</option>
            <option value="john.smith">john.smith</option>
            <option value="priya.sharma">priya.sharma</option>
            <option value="david.lee">david.lee</option>
          </select>

          <select
            value={newAccess.report}
            onChange={(e) =>
              setNewAccess({ ...newAccess, report: e.target.value })
            }
          >
            <option value="">Choose a report...</option>
            <option value="KYC Reports">KYC Reports</option>
            <option value="AML Reports">AML Reports</option>
            <option value="Dormant Reports">Dormant Reports</option>
            <option value="Active User Reports">Active User Reports</option>
            <option value="Inactive User Reports">Inactive User Reports</option>
          </select>

          <select
            value={newAccess.access}
            onChange={(e) =>
              setNewAccess({ ...newAccess, access: e.target.value })
            }
          >
            <option value="View">View</option>
            <option value="View/Download">View/Download</option>
          </select>

          <button className="btn btn-primary" onClick={handleAssign}>
            Assign Access
          </button>
        </div>
      </div>

      {/* Current Access Table */}
      <div className="current-section">
        <h3>Current Report Access</h3>
        <table className="table table-striped">
          <thead>
            <tr>
              <th>Username</th>
              <th>Created At</th>
              <th>Report</th>
              <th>Access</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {reportAccessList.map((item) => (
              <tr key={item.id}>
                <td>{item.username}</td>
                <td>{item.createdAt}</td>
                <td>{item.report}</td>
                <td>
                  <span className="badge bg-success">{item.access}</span>
                </td>
                <td>
                  <button
                    className="btn btn-warning btn-sm"
                    onClick={() => setEditItem(item)}
                  >
                    EDIT
                  </button>
                  <button
                    className="btn btn-danger btn-sm"
                    onClick={() => handleDelete(item.id)}
                  >
                    DELETE
                  </button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {/* Edit Popup */}
      {editItem && (
        <div className="modal-backdrop">
          <div className="modal-box">
            <h4>Edit Report Access</h4>

            <input
              type="text"
              value={editItem.username}
              onChange={(e) =>
                setEditItem({ ...editItem, username: e.target.value })
              }
            />

            <select
              value={editItem.report}
              onChange={(e) =>
                setEditItem({ ...editItem, report: e.target.value })
              }
            >
              <option value="KYC Reports">KYC Reports</option>
              <option value="AML Reports">AML Reports</option>
              <option value="Dormant Reports">Dormant Reports</option>
              <option value="Active User Reports">Active User Reports</option>
              <option value="Inactive User Reports">Inactive User Reports</option>
            </select>

            <select
              value={editItem.access}
              onChange={(e) =>
                setEditItem({ ...editItem, access: e.target.value })
              }
            >
              <option value="View">View</option>
              <option value="View/Download">View/Download</option>
            </select>

            <div className="modal-actions">
              <button className="btn btn-success" onClick={handleEditSave}>
                Save
              </button>
              <button
                className="btn btn-secondary"
                onClick={() => setEditItem(null)}
              >
                Cancel
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}

